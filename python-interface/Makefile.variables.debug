########################################################################
# COMPILATION FLAGS

FLAGS		= $(COMMON_FLAGS) -g -O0 -DDEBUG -D_GLIBCXX_DEBUG

ifeq ($(DIST),local)
LAL_LIB		= -L $(LAL_DIR)/lal-debug -llaldebug
else
LAL_LIB		= -llaldebug
endif

LIBS		= $(LAL_LIB) -lgmp -fopenmp $(PYTHON_LIBRARY)
SWIG_FLAGS	+= -DDEBUG -D_GLIBCXX_DEBUG

########################################################################
# MODULES

# documentation
# "name" represents the name of the module: name=DSE, or name=TST, ...
# name_BNAME		# module's base name
# name_INAME		# module's interface file (.i) name without extension

# -- dataset_error
DSE_BNAME	= laldataset_error
DSE_INAME	= $(DSE_BNAME)debug

# -- tree_structure_type
TST_BNAME	= laltree_structure_type
TST_INAME	= $(TST_BNAME)debug

# -- algorithms_crossings
ALGCR_BNAME	= lalalgorithms_crossings
ALGCR_INAME	= $(ALGCR_BNAME)debug

# -- definitions
DEFS_BNAME	= laldefinitions
DEFS_INAME	= $(DEFS_BNAME)debug

# -- generation
GEN_BNAME	= lalgeneration
GEN_INAME	= $(GEN_BNAME)debug

# -- graphs
GRAPHS_BNAME= lalgraphs
GRAPHS_INAME= $(GRAPHS_BNAME)debug

# -- io
IO_BNAME	= lalio
IO_INAME	= $(IO_BNAME)debug

# -- iterators
ITER_BNAME	= laliterators
ITER_INAME	= $(ITER_BNAME)debug

# -- linarr
LINARR_BNAME= lallinarr
LINARR_INAME= $(LINARR_BNAME)debug

# -- numeric
NMRC_BNAME	= lalnumeric
NMRC_INAME	= $(NMRC_BNAME)debug

# -- properties
PROP_BNAME	= lalproperties
PROP_INAME	= $(PROP_BNAME)debug

# -- lal (library's main module)
LAL_BNAME	= lal
LAL_INAME	= $(LAL_BNAME)debug

########################################################################
# DEPENDENCIES IN MODULES

# LAL compilation object
ifeq ($(DIST),local)
LIBRARY_SHARED_DEP	= $(LAL_DIR)/lal-debug/liblaldebug.a
else
LIBRARY_SHARED_DEP	=
endif
